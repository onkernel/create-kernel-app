{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": ["./tsconfig.json"],
    "tsconfigRootDir": "."
  },
  "plugins": ["@typescript-eslint"],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "prettier"
  ],
  "rules": {
    "@typescript-eslint/explicit-function-return-type": "warn"
  },
  "ignorePatterns": ["dist/", "node_modules/"],
  "overrides": [
    {
      "files": ["templates/typescript/sample-app/**/*.ts", "templates/typescript/sample-app/**/*.tsx"],
      "parserOptions": {
        "project": ["./templates/typescript/sample-app/tsconfig.json"],
        "tsconfigRootDir": "./templates/typescript/sample-app"
      }
    }
  ]
} 